fontRegular = ProximaNovaRegular
fontBold = ProximaNovaBold
fontLight = ProximaNovaLight
font-size = 1rem
colorWhite = #ffffff
colorBlack = #282828
colorRed = #d41317
colorGrey = #dcdcdc
colorDarkGrey = #454854
colorBlue = #201b57
colorOrange = #ef4129
btnBoxShadow = 11px 8px 18px rgba(144,141,141,0.45)

@font-face
  font-family ProximaNovaRegular
  src url(/assets/fonts/ProximaNova-Regular.woff2) format('woff2'),
  url(/assets/fonts/ProximaNova-Regular.woff) format('woff')

@font-face
  font-family ProximaNovaBold
  src url(/assets/fonts/ProximaNova-Bold.woff2) format('woff2'),
  url(/assets/fonts/ProximaNova-Bold.woff) format('woff')

@font-face
  font-family ProximaNovaLight
  src url(/assets/fonts/ProximaNova-light.woff2) format('woff2'),
  url(/assets/fonts/ProximaNova-light.woff) format('woff')

//outline fix
input
textarea
  outline none
  box-shadow none !important
  resize none

button
a
  display inline-block
  &:focus
    outline none
    box-shadow none

//bootstrap macOs fix
.row
  &:before
  &:after
    display inline-block !important
    content normal

//styles
body
  font-size font-size
  font-family fontRegular
  color colorBlack
  line-height 1.1
  background-color colorWhite

.container
  padding 0

a
.btn
  color colorWhite
  &:hover
  &:focus
    color colorWhite
    text-decoration none

img
  display block
  margin auto

ul
  margin 0
  padding 0

header
  background-color transparent
  padding: 54px 0 0
  position absolute
  top 0
  left 64px
  a
    color colorRed
    font-family ProximaNovaRegular
    font-size 25px
    &:hover
    &:focus
      color colorRed

footer
  background-color colorDarkGrey
  padding 58px 0 90px
  text-align center
  a
    font-size 30px
    opacity 0.5
    margin-bottom 28px
  .text
    font-size 20px
    line-height 1.3
    color #c8c8c8
    opacity 0.5

.title
  font-family ProximaNovaLight
  font-size 42px
  color colorBlack
  margin-bottom 10px

.subtitle
  font-family ProximaNovaRegular
  font-size 21px
  color colorRed
  line-height 1.2
  margin-bottom 26px

.btn
  font-family ProximaNovaRegular
  font-size 30px
  line-height 1
  text-transform uppercase
  color colorWhite
  padding 20px 32px 16px
  border 0
  border-radius 6px
  box-shadow btnBoxShadow
  &:hover
  &:focus
    box-shadow btnBoxShadow
  &.red
    background-color colorRed
  &.orange
    background-color colorOrange

.text
  font-family ProximaNovaLight
  font-size 18px
  line-height 1.33
  color colorBlack

.screen-summary
  background url("../assets/images/bg_screen1.jpg") no-repeat center
  height 769px
  padding-top 118px

.summary
  position relative
  z-index 10
  margin-left 40%

.screen-description
  background url("../assets/images/bg_screen2.jpg") no-repeat center
  height 724px
  .title
    font-size 30px
    color colorRed

.description
  padding-left 70px

.description-img
  margin 40px auto 30px
  border-radius 100%
  box-shadow 7px 9px 32px rgba(67,69,75,0.26)

.screen-work
  padding 104px 0
  .title
    margin-bottom 60px
    text-align center

.work-step
  margin-bottom 16px
  .arrow
    background url("../assets/images/arrow.png") no-repeat center
    background-size 25px
    width 25px
    height 64px
    position absolute
    right -16px
    top 32px
    transform rotate(-90deg)
  img
    width 134px
    margin-bottom 44px

  .text
    font-family ProximaNovaRegular
    line-height 1.22
    text-align center

.screen-scheme
  padding-bottom 105px
  .title
    margin-bottom 74px
    text-align center

.screen-alarm
  background colorGrey
  padding-top 40px
  .title
    margin-bottom 102px
    text-align center

.alarm-step
  margin-bottom 40px
  img
    width 168px
    margin-bottom 23px
  .text
    font-size 20px
    line-height 1.1
    text-align center

.screen-item
  padding 50px 0
  .title
    font-size 36px
    margin-bottom 15px
  .text
    font-size 16px
    line-height 1.25

.item-desc
  padding-left 125px

.item-img
  position relative
  img
    margin-bottom 30px
  .sticker
    position absolute
    top 54px
    left 0
    width 150px
    height 150px
    border-radius 100%
    background colorRed
    color colorWhite
    text-align center
    box-shadow 13px 6px 32px rgba(53,41,31,0.5)
    display flex
    align-items center
    justify-content center
    font-size 20px
    span
      font-size 25px

.item-price
  text-align left
  margin-bottom 26px
  width: 50%;
  padding 0 15px
  float left
  &:first-of-type
    border-right 1px solid colorBlack
  .text
    font-size 18px
  .price
    font-family ProximaNovaLight
    font-size 42px

.screen-callback
  background colorBlue
  padding 64px 0 78px
  color colorWhite
  .title
    font-size 35px
    color colorWhite
    margin-bottom 30px
    text-align center
    text-transform uppercase
  .text
    font-size 17px
    color colorWhite
    opacity 0.4
    line-height 1.4
    text-align center
    margin 0 -15px 50px
  .btn
    font-size 19px
    text-transform none
    border-radius 4px
    box-shadow none
    padding 15px
  .form-text
    font-family ProximaNovaLight
    font-size 15px
    margin 0 0 20px
  .form-group
    margin-bottom 22px
  .form-control
    height 46px
    padding 10px 20px
    font-size 17px
    line-height 1.05
    color colorWhite
    background-color transparent
    border 1px solid colorWhite
    border-radius 0
    transition none
    :placeholder
      opacity 0.3

.swiper-container
  margin-top -50px